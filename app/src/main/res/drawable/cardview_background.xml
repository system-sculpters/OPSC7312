<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- White background color -->
            <corners android:radius="8dp" /> <!-- Optional: Rounded corners -->
            <stroke
                android:width="2dp"
                android:color="@color/blue" /> <!-- Selected border color -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue" /> <!-- Default background color -->
            <corners android:radius="8dp" /> <!-- Optional: Rounded corners -->
            <stroke
                android:width="2dp"
                android:color="@color/blue" /> <!-- Default border color -->
        </shape>
    </item>
</selector>