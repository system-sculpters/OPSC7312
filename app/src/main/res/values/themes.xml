<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OPSC7312" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/light_grey</item>
        <item name="android:statusBarColor">@color/dark_grey</item>

        <!-- PRIMARY-->
        <item name="android:windowBackground">@color/itemPrimary</item>

        <!-- TEXT-->
        <item name="colorOnPrimary">@color/textPrimary</item> <!-- Text color on primary background -->


        <!-- ITEM LAYOUT -->
        <item name="colorItemLayoutBg">@color/itemPrimary</item>
        <item name="colorItemBorder">@color/itemOnPrimary</item>

        <!-- INPUT STROKE -->
        <item name="whiteItemBorder">@color/inputBgStroke</item>

        <!-- THEME BACKGROUND -->
        <item name="themeBgBorder">@color/themeBg</item>

        <item name="darkerTitle">@color/darkerTitle</item>

        <item name="userHomeImg">@color/userHomeImg</item>

        <item name="thumbTint">@color/textPrimary</item>

        <item name="trackTint">@color/textPrimary</item>

    </style>

    <style name="Theme.OPSC7312" parent="Base.Theme.OPSC7312" />

    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/textPrimary</item>

        <item name="trackTint">@color/textPrimary</item>
    </style>

    <style name="MyButtonStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:backgroundTint">@color/textPrimary</item>
        <item name="android:textColor">@color/itemPrimary</item>
        <item name="android:drawable">@drawable/button_background</item>
        <item name="colorPrimary">@color/textPrimary</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/light_grey</item>
    </style>

</resources>