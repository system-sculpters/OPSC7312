<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Light Theme -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/lightIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_light_mode"
            android:contentDescription="Light mode icon"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/lightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light"
            android:textSize="16sp"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/checkLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Dark Theme -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/darkIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_dark_mode"
            android:contentDescription="Dark mode icon"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/darkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark"
            android:textSize="16sp"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/checkDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Automatic Theme -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/automaticIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Automatic mode icon"
            android:src="@drawable/ic_automatic_mode"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/automaticText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Automatic"
            android:textSize="16sp"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/checkAutomatic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
