<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.TransactionsFragment"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/item_layout_background"
            android:padding="10dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/transaction_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Expenses"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:textColor="@color/light_grey"
                android:textStyle="bold"
                android:padding="0dp"
                android:fontFamily="@font/inter_medium"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4000 ZAR"
                android:textSize="20sp"
                android:textAlignment="textEnd"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:padding="0dp"
                android:layout_marginTop="5dp"

                />


        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/income"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="@string/income"
                android:checked="true"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:layout_weight="1"
                android:background="@drawable/toggle_selector_left"
                android:onClick="onRadioButtonClicked"
                android:textSize="24sp"
                android:fontFamily="@font/inter_medium"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/expense"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/dark_grey"
                android:text="@string/expense"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:layout_weight="1"
                android:background="@drawable/toggle_selector_right"
                android:onClick="onRadioButtonClicked"
                android:textSize="24sp"
                android:fontFamily="@font/inter_medium"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:orientation="horizontal"
            android:gravity="end">

            <LinearLayout
                android:id="@+id/sort"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/filter_layout_background"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_sort_24"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/filter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/filter_layout_background"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_tune_24"/>
            </LinearLayout>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight=".6"
        android:gravity="center_vertical"
        >


        <FrameLayout
            android:id="@+id/addGoal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/add_button_background"
            >

            <ImageView
                android:id="@+id/card_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_add_light"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:scaleType="fitCenter" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>